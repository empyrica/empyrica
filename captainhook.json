{
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\ValidateConventionalCommit"
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "sh",
                "options": [
                    "-c",
                    "git diff --cached --name-only --diff-filter=ACM | grep '\\.php$' | xargs -r ./vendor/bin/phpcs --standard=PSR12 --exclude=Generic.Files.LineLength"
                ]
            }
        ]
    },
    "pre-push": {
        "enabled": true,
        "actions": [
            {
                "action": "sh",
                "options": [
                    "-c",
                    "(./vendor/bin/phpunit --cache-result-file=.phpunit.result.cache) & (./vendor/bin/phpcs --ignore=*/vendor/*,*/var/*,*/bin/* --standard=PSR12 --exclude=Generic.Files.LineLength packages) && wait"
                ]
            }
        ]
    }
}
